<!-- views include flash.ejs code -->

<% if (success && success.length) { %>
    <br>
    <div class="alert alert-success alert-dismissible fade show col-md-6 offset-3" 
    role="alert">
        <%= success %>
        <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"></button>
    </div>
<% } %> 

<% if (error && error.length) { %>
    <br>
    <div class="alert alert-danger alert-dismissible fade show col-md-6 offset-3" 
    role="alert">
        <%= error %>
        <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"></button>
    </div>
<% } %> 