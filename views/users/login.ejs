<!-- views users login.ejs code -->

<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1><u><i>Login to WanderLust -</i></u></h1>
            <br> <br>
            <form action="/login" method="post">
                <div>
                    <label for="username" class="form-label">
                        <b><u><i>Username -</i></u></b>
                    </label>
                    <input type="text" 
                    name="username" 
                    id="username" 
                    class="form-control"
                    required>
                </div>
                <br>
                <div>
                    <label for="password" class="form-label">
                        <b><u><i>Password -</i></u></b>
                    </label>
                    <input type="password" 
                    name="password" 
                    id="password" 
                    class="form-control"
                    required>
                </div>
                <br> <br>
                <button class="btn btn-outline-dark"><b><u><i>Login</i></u></b></button>
            </form>
            <br>
            <p>Don't have an account? &nbsp;<a href="/signup"><b><i>SignUp</i></b></a></p> 
        </div>
    </div>
</body>