        <% for(let listing of allListings){ %>
            <li><a href="/listings/<%= listing._id %>"><%= listing.title %></a></li>
        <% } %>
    </ul> -->
    <!-- above command is commented out because hmne cards bna liye hain jo pictures ke saath display kr rhe hain -->
</body>