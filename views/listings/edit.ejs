<!-- views listings edit.ejs code -->

<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <br> <br>
            <h1><u><i>Edit your listing - </i></u></h1>
            <br> <br>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT"
                class="needs-validation" novalidate enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">
                        <b><u><i>Title -</i></u></b>
                    </label>
                    <input type="text" 
                    name="listing[title]" 
                    id="title"
                    class="form-control"
                    value="<%= listing.title %>"
                    required>
                    <div class="valid-feedback">Filled!</div>
                    <div class="invalid-feedback">Invalid Input!</div>
                </div>
                <br><br>
                <div>
                    <label for="description" class="form-label">
                        <b><u><i>Description -</i></u></b>
                    </label>
                    <textarea 
                    name="listing[description]" 
                    id="description"
                    class="form-control"
                    required><%= listing.description %></textarea>
                    <div class="valid-feedback">Filled!</div>
                    <div class="invalid-feedback">Invalid Input!</div>
                </div>
                <br><br>
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">
                            <b><u><i>Price -</i></u></b>
                        </label>
                        <input type="number" 
                        name="listing[price]" 
                        id="price"
                        value="<%= listing.price %>"
                        class="form-control"
                        required>
                        <div class="valid-feedback">Filled!</div>
                        <div class="invalid-feedback">Invalid Input!</div>
                    </div>
                    <div class="col-md-8">
                        <label for="location" class="form-label">
                            <b><u><i>Location -</i></u></b>
                        </label>
                        <input type="text" 
                        name="listing[location]" 
                        id="location" 
                        value="<%= listing.location %>"
                        class="form-control"
                        required>
                        <div class="valid-feedback">Filled!</div>
                        <div class="invalid-feedback">Invalid Input!</div>
                    </div>
                </div>
                <br><br>
                <div>
                    <label for="country" class="form-label">
                        <b><u><i>Country -</i></u></b>
                    </label>
                    <input type="text" 
                    name="listing[country]" 
                    id="country" 
                    value="<%= listing.country %>"
                    class="form-control"
                    required>
                    <div class="valid-feedback">Filled!</div>
                    <div class="invalid-feedback">Invalid Input!</div>
                </div>
                <br><br>
                <div>
                    <b><u><i>Original Image preview -</i></u></b> &nbsp;&nbsp;
                    <img src="<%= originalImageUrl %>" class="col-md-8">
                </div>
                <br> <br>
                <div>
                    <label for="image" class="form-label">
                        <b><u><i>Switch Image -</i></u></b>
                    </label>
                    <input type="file" 
                        name="listing[image]" 
                        id="image" 
                        class="form-control">
                    <div class="valid-feedback">Filled!</div>
                    <div class="invalid-feedback">Invalid Input!</div>
                </div>
                    <br><br> 
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
        </div>
    </div>
</body>